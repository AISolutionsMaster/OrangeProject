{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2022"],
    "module": "node16",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2022",
    "declaration": true,
    "outDir": "lib",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@sinonjs/fake-timers": ["./node_modules/@types/sinonjs__fake-timers"]
    }
  },
  "include": ["src/**/*.ts"],
}
